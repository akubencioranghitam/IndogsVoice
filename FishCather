local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Fish Catcher",
    LoadingTitle = "Raja Malapetaka",
    LoadingSubtitle = "Indogs Voice Kontol",
    Theme = "Amethyst",
    ConfigurationSaving = {
        Enabled = true,
        FileName = "RapidCatcher"
    }
})

Rayfield:Notify({
   Title = "Tutorial",
   Content = "Minimal lempar pancingan sekali",
   Duration = 10,
   Image = "bell"
})

local Tab = Window:CreateTab("Fishing Controls", "fish")

local Section = Tab:CreateSection("Fish Catch Triggers")

local args = {
    [1] = true
}

local function triggerFishCatch()
    game:GetService("Players").LocalPlayer.Character:FindFirstChild("Fishing Rod (BETA)").Event.FishCatch:FireServer(unpack(args))
    Rayfield:Notify({
        Title = "Fish Caught!",
        Content = "Triggered FishCatch event! üé£",
        Duration = 3,
        Image = "fish"
    })
end

local Button = Tab:CreateButton({
    Name = "Catch Fish Once",
    Callback = function()
        triggerFishCatch()
    end,
})

local isLooping = false
local loopConnection

local Toggle = Tab:CreateToggle({
    Name = "Auto Fish Loop",
    CurrentValue = false,
    Flag = "FishLoop",
    Callback = function(Value)
        isLooping = Value
        if isLooping then
            loopConnection = game:GetService("RunService").Heartbeat:Connect(function()
                triggerFishCatch()
            end)
            Rayfield:Notify({
                Title = "Auto Fish On",
                Content = "Looping FishCatch every frame! üêü",
                Duration = 5,
                Image = "repeat"
            })
        else
            if loopConnection then
                loopConnection:Disconnect()
            end
            Rayfield:Notify({
                Title = "Auto Fish Off",
                Content = "Stopped the fishing loop.",
                Duration = 5,
                Image = "x-circle"
            })
        end
    end,
})
